  "technical_architecture": {
    "transport_layers": [
      {
        "name": "Bluetooth Low Energy Mesh",
        "purpose": "Offline/local communication",
        "range": "30m direct, 300m via relay",
        "protocol": "Custom binary protocol optimized for BLE"
      },
      {
        "name": "Nostr Protocol",
        "purpose": "Internet-based global reach",
        "relays": "290+",
        "encryption": "NIP-17 gift-wrapped messages"
      }
    ],
    "cryptography": {
      "framework": "Noise Protocol Framework",
      "handshake_pattern": "XX (mutual authentication, forward secrecy)",
      "cipher": "ChaCha20-Poly1305 (AEAD)",
      "key_exchange": "X25519 (Curve25519)",
      "hash": "SHA-256",
      "key_derivation": "HKDF-SHA256",
      "rekey_trigger": "1 hour or 10,000 messages"
    },
    "privacy_features": {
      "dummy_messages": "30-120 second intervals",
      "timing_jitter": "50-500ms random delays",
      "message_padding": "PKCS#7-style",
      "metadata": "TTL and message ID only, no sender/recipient"
    },
    "dependencies": {
      "swift-secp256k1": {
        "version": "0.21.1",
        "source": "https://github.com/21-DOT-DEV/swift-secp256k1",
        "purpose": "Elliptic curve cryptography"
      },
      "Arti": {
        "source": "Local package",
        "purpose": "Tor integration for anonymous networking"
      },
      "BitLogger": {
        "source": "Local package",
        "purpose": "Logging"
      }
    }
  },

